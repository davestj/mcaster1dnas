<mcaster1>
    <limits>
        <clients>100</clients>
        <sources>10</sources>
        <workers>2</workers>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-size>65535</burst-size>
    </limits>

    <authentication>
        <!-- IMPORTANT: Change these passwords in production! -->
        <source-password>hackme</source-password>
        <relay-password>hackme</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>hackme</admin-password>
    </authentication>

    <!-- Server identification -->
    <hostname>15.204.91.208</hostname>
    <location>Earth</location>
    <admin>admin@mcaster1.com</admin>

    <!-- HTTP Listener on port 9330 -->
    <listen-socket>
        <port>9330</port>
        <bind-address>15.204.91.208</bind-address>
    </listen-socket>

    <!-- HTTPS/SSL Listener on port 9443 -->
    <listen-socket>
        <port>9443</port>
        <bind-address>15.204.91.208</bind-address>
        <ssl>1</ssl>
    </listen-socket>

    <!-- File serving enabled for web interface -->
    <fileserve>1</fileserve>

    <!-- Paths configuration -->
    <paths>
        <!-- Base directory if chroot is enabled -->
        <basedir>/var/www/mcaster1.com/mcaster1dnas/build</basedir>

        <!-- Log directory (relative to runtime directory or absolute) -->
        <logdir>/var/www/mcaster1.com/mcaster1dnas/build/logs</logdir>

        <!-- Web interface files -->
        <webroot>/var/www/mcaster1.com/mcaster1dnas/web</webroot>

        <!-- Admin interface files -->
        <adminroot>/var/www/mcaster1.com/mcaster1dnas/admin</adminroot>

        <!-- SSL Certificate (combined cert + key in PEM format) -->
        <ssl-certificate>/var/www/mcaster1.com/mcaster1dnas/ssl/mcaster1dnas.pem</ssl-certificate>

        <!-- PID file location -->
        <pidfile>/var/www/mcaster1.com/mcaster1dnas/build/mcaster1.pid</pidfile>

        <!-- Redirect root to status page -->
        <alias source="/" dest="/status.xsl"/>
    </paths>

    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <playlistlog>playlist.log</playlistlog>
        <loglevel>3</loglevel> <!-- 4=Debug, 3=Info, 2=Warn, 1=Error -->
        <logsize>10000</logsize>
        <logarchive>1</logarchive>
    </logging>

    <security>
        <chroot>0</chroot>
        <!-- Run as this user/group after startup (if started as root) -->
        <!-- <changeowner>
            <user>mcaster1</user>
            <group>mcaster1</group>
        </changeowner> -->
    </security>
</mcaster1>
